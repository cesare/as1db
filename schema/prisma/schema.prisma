generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Class {
  id Int @id @default(autoincrement())
  name String @unique

  items Item[]

  @@map("classes")
}

model Category {
  id Int @id @default(autoincrement())
  name String @unique

  @@map("categories")
}

model Effect {
  id Int @id @default(autoincrement())
  name String @unique

  @@map("effects")
}

model Trait {
  id Int @id @default(autoincrement())
  name String @unique

  @@map("traits")
}

model Item {
  id Int @id @default(autoincrement())
  classId Int @map("class_id")
  class Class @relation(fields: [classId], references: [id])
  name String @unique

  @@map("items")
}
